<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
	
  <xacro:macro name="sensor_sick_tim571" params="prefix parent prefix_topic:='front_laser' *origin min_angle:=-1.57619449019 max_angle:=1.57619449019">
     
    <joint name="${prefix}_base_joint" type="fixed">
      <xacro:insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${prefix}_base_link"/>
    </joint>
  
    
    <link name="${prefix}_base_link">
      <collision>
        <origin xyz="0 0 0" rpy="3.1415926 0 0"/>
        <geometry>
         <mesh filename="package://husky_ur3_description/meshes/sick_tim/sick_tim571.dae"/>
        </geometry>
      </collision>
  
      <visual>
        <origin xyz="0 0 0" rpy="3.1415926 0 0"/>
        <geometry>
            <mesh filename="package://husky_ur3_description/meshes/sick_tim/sick_tim571.dae"/>
        </geometry>
      </visual>
  
      <inertial>
        <mass value="1e-5" />
        <origin xyz="0 0 0" rpy="3.1415926 0 0"/>
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
      </inertial>
    </link>
    
    <joint name="${prefix}_joint" type="fixed">
      <origin xyz="0 0 -0.06246" rpy="0 0 0"/>
      <parent link="${prefix}_base_link"/>
      <child link="${prefix}_link"/>
    </joint>
  
    
    <link name="${prefix}_link">
    </link>
    

  
  	
    <xacro:sensor_sick_tim571_gazebo/>
		
  </xacro:macro>
  
    
  <xacro:macro name="sensor_sick_tim571_gazebo">
	<gazebo reference="${prefix}_link">
			<sensor type="gpu_lidar" name="${prefix}_sensor">
				<pose>0 0 0 0 0 0</pose>
				<visualize>false</visualize>
				<update_rate>10</update_rate>
				<topic>scan</topic>
				<lidar>
					<scan>
						<horizontal>
							<samples>720</samples>
							<resolution>1</resolution>
							<min_angle>-1.5708</min_angle>
							<max_angle>1.5708</max_angle>
						</horizontal>
					</scan>
					<range>
						<min>0.05</min>
						<max>25.0</max>
						<resolution>0.01</resolution>
					</range>
					<noise>
						<type>gaussian</type>
						<mean>0.0</mean>
						<stddev>0.01</stddev>
					</noise>
				</lidar>
				<always_on>1</always_on>
			</sensor>
	</gazebo>
  </xacro:macro>
  
</robot>
